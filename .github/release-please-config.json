{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": false,
  "include-component-in-tag": true,
  "extra-files": [
    {
      "type": "json",
      "path": ".claude-plugin/plugin.json",
      "jsonpath": "$.version"
    }
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    }
  ],
  "packages": {
    "plugins/trogonstack-diataxis": {
      "component": "trogonstack-diataxis"
    },
    "plugins/trogonstack-gh": {
      "component": "trogonstack-gh"
    },
    "plugins/trogonstack-nats": {
      "component": "trogonstack-nats"
    }
  },
  "plugins": [
    {
      "type": "sentence-case"
    }
  ],
  "tag-separator": "@",
  "include-v-in-tag": true,
  "draft": false,
  "draft-pull-request": false,
  "prerelease": false,
  "separate-pull-requests": true,
  "signoff": "Straw Hat Team Bot <61149376+sht-bot@users.noreply.github.com>"
}
